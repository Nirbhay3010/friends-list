<p style="color: green"><%= notice %></p>

<h1>Friends</h1>

<div id="friends">
   <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        
      </tr>
    </thead>
    <tbody>
  <% @friends.each do |friend| %>
    <%= render friend %>
    
  <% end %>
  </tbody>
  </table>
</div>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>


